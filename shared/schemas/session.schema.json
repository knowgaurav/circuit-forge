{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://circuitforge.io/schemas/session.json",
    "title": "Session",
    "description": "Collaborative session",
    "type": "object",
    "required": [
        "code",
        "createdAt",
        "lastActivityAt",
        "creatorParticipantId"
    ],
    "properties": {
        "code": {
            "type": "string",
            "pattern": "^[A-Z0-9]{6}$",
            "description": "6-character uppercase alphanumeric session code"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "lastActivityAt": {
            "type": "string",
            "format": "date-time"
        },
        "creatorParticipantId": {
            "type": "string",
            "description": "UUID of the session creator"
        }
    }
}